<?xml version="1.0" encoding="UTF-8"?>
<project name="buildpackage" default="do">

	<target name="do">
	
		<echo msg="************************************" />
		<echo msg="* Build-Package: babioon-caption   *" />
		<echo msg="************************************" />
		
		<property name="filebase" value="${project.basedir}/../../.." override="false"/>
		<property name="codebase" value="${filebase}/babioon-caption/code" override="true"/>
		
        <mkdir dir="${filebase}/build" />
		<mkdir dir="${filebase}/build/babiooncaption" />
		
		<property name="bp_targetdir" value="${filebase}/build/babiooncaption" />
		
		<copy file="${codebase}/plugins/content/babiooncaption/babiooncaption.xml" tofile="${bp_targetdir}/babiooncaption.xml" overwrite="true"/>
		<copy file="${codebase}/plugins/content/babiooncaption/babiooncaption.php" tofile="${bp_targetdir}/babiooncaption.php" overwrite="true"/>
		<copy file="${codebase}/plugins/content/babiooncaption/index.html" tofile="${bp_targetdir}/index.html" overwrite="true"/>
		<copy todir="${bp_targetdir}" overwrite="true">
			<fileset dir="${codebase}/administrator" >
				<include name="language/**" />
			</fileset>
		</copy>

		<delete file="${filebase}/build/babiooncaption.zip" failonerror="false" />
		<!-- zipfilename must match to projectname -->
		<zip destfile="${filebase}/build/babioon-caption.zip" basedir="${bp_targetdir}" />
	</target>
</project>
